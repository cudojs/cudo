{
  "name": "cudo",
  "version": "0.7.3",
  "repository": "cudojs/cudo",
  "description": "Cudo microservices framework",
  "keywords": [
    "cudo",
    "framework",
    "microservices"
  ],
  "license": "BSD-2-Clause",
  "author": {
    "name": "Marek Maciusowicz",
    "email": "m.maciusowicz@cudojs.com",
    "url": "http://www.cudojs.com"
  },
  "engines": {
    "node": ">=8.11.1"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "path-to-regexp": "^2.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.48",
    "@types/node": "^10.5.1",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^11.9.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.2.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "npm run test && tsc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "rimraf ./dist",
    "test": "nyc mocha"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
